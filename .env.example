# Environnement de Développement
NODE_ENV=development
PORT=3000

# Base de données
DATABASE_URL=postgresql://finops:finops123@localhost:5432/finops
REDIS_URL=redis://localhost:6379

# Authentification
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d

# OpenRouter (Modèles IA)
OPENROUTER_API_KEY=sk-or-v1-your_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Modèles utilisés
MODEL_PHASE1_ANALYST=anthropic/claude-3-5-sonnet-20241022
MODEL_PHASE2_RESEARCHER=openrouter/deepseek/deepseek-v3
MODEL_PHASE3_VALIDATOR=anthropic/claude-3-5-sonnet-20241022

# Configuration du Pipeline
PIPELINE_MAX_ITERATIONS=2
PIPELINE_TIMEOUT_MS=45000
CACHE_TTL_SECONDS=86400
CACHE_SEMANTIC_SIMILARITY_THRESHOLD=0.85

# Telegram (Optionnel)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Multi-tenancy
MAX_CPAS_PER_ACCOUNT=10
MAX_CLIENTS_PER_CPA=100
MAX_ANALYSES_PER_MONTH=1000

# Features Flags
ENABLE_CACHE_SEMANTIC=true
ENABLE_STREAMING=true
ENABLE_MULTI_TENANCY=true
ENABLE_WEBSOCKET=true
